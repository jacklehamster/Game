{
  "window": {
    "title": "Disco!",
    "width": { "js-function" : "return innerWidth" },
    "height": { "js-function" : "return innerHeight" },
    "color" : "#000000"
  },
  "input": {
    "keyboard": {
      "active": true,
      "lastPressed": 0
    },
    "mouse": {
      "cursor": {
          "src": "hand-cursor.png",
          "offset": [55, 10]
      },
      "active": true,
      "lastMoved": 0
    }
  },
  "overlay": {
    "objects": [
      {
        "visible" : false,//{ "formula" : "model.input.keyboard.lastPressed >= model.input.mouse.lastMoved" },
        "position": { "formula": "model.input.mouse.position" },
        "frame": { "formula": "model.input.mouse.cursor" },
        "absolute": true
      }
    ]
  },
  "music": {
    "volume": 0.5,
    "path" : "rag.ogg"
  },
  "player": {
    "fetch-content": "player.json"
  },
  "camera": {
    "position": {
      "formula": "model.player.position"
    },
    "rotation": {
      "formula": "model.player.rotation"
    }
  },
  "objects": [
    { "//":"___________ground____________________",
      "position": {
        "x": 0, "y":-20, "z":0
      },
      "rotation": {
        "x": { "calculate": "-π/2" }
      },
      "size": [100,1,100],
      "frame": {
        "src": "discofloor.png"
      }
    },
    { "//":"______________top____________________",
      "position": {
        "x": 0, "y": 40, "z": 0
      },
      "rotation": { 
        "x": { "calculate": "π/2" }
      },
      "size": [100,1,100],
      "frame": {
        "src": "discofloor.png"
      }
    },
    { "//":"_______________front__________________",
      "position": {
        "x": 0, "y": 10, "z": -50
      },
      "size": [100,60,1],
      "frame": {
        "src": "munchkin4.gif"
      }
    },
    { "//":"_______________left__________________",
      "position": {
        "x": -50, "y": 10, "z": 0
      },
      "size": [1,60,100],
      "rotation": {
        "y" : { "calculate" : "π/2" }
      },
      "frame": {
        "src": "discofloor.png"
      }
    },
    { "//":"_______________ right __________________",
      "position": {
        "x": 50, "y": 10, "z": 0
      },
      "size": [1,60,100],
      "rotation": {
        "y" : { "calculate" : "-π/2" }
      },
      "frame": {
        "src": "discofloor.png"
      }
    },
    {
      "position": {
        "x": 49, "y": 10, "z": -10
      },
      "size": [30,25,30],
      "rotation": {
        "y" : { "calculate" : "-π/2" }
      },
      "frame": {
        "src": "news.gif"
      }
    },
    { "//":"_______________back__________________",
      "position": {
        "x": 0, "y": 10, "z": 50
      },
      "size": [100,60,1],
      "rotation": {
        "y" : { "calculate" : "π" }
